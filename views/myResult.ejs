<!DOCTYPE html>
<html>

<head>
    <title>My Result</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <div class="container">
        <h2>Your Result</h2>

        <% if (result) { %>
            <table class="result-table">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Marks</th>
                    </tr>
                </thead>
                <tbody>
                    <% result.subjects.forEach(subject=> { %>
                        <tr>
                            <td>
                                <%= subject.name %>
                            </td>
                            <td>
                                <%= subject.marks %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <div class="result-summary">
                <div class="result-summary-item">
                    <strong>Student ID</strong>
                    <span>
                        <%= result.studentId %>
                    </span>
                </div>
                <div class="result-summary-item">
                    <strong>Total Marks</strong>
                    <span>
                        <%= result.totalMarks %>
                    </span>
                </div>
                <div class="result-summary-item">
                    <strong>Percentage</strong>
                    <span>
                        <%= result.percentage.toFixed(2) %>%
                    </span>
                </div>
                <div class="result-summary-item">
                    <strong>Grade</strong>
                    <span>
                        <%= result.grade %>
                    </span>
                </div>
            </div>
            <% } else { %>
                <p class="no-result">No result found for your ID.</p>
                <% } %>

                    <a href="/dashboard"><button>Back to Dashboard</button></a>
    </div>
</body>

</html>